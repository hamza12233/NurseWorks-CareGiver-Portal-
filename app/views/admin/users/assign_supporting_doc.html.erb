<% if @assign_supporting_doc.errors.any? %>
    <%= render 'devise/shared/error_messages', resource: @assign_supporting_doc %>
<% end %>
<%= form_for [:admin, @user, @assign_supporting_doc], url: admin_user_assign_doc_path do |f| %>

  <div class="container">
      <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
              <!-- Nested Row within Card Body -->
              <div class="row">
                  <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                  <div class="col-lg-7">
                      <div class="p-5">
                          <div class="text-center">
                              <h1 class="h4 text-gray-900 mb-4">Assign Support Request </h1>
                          </div>
                          <form class="user">
                              <div class="form-group row">
                                  <div class="col-sm-12 p-0">
                                    <%= f.hidden_field :user_id, value: (@user.id || params[:user_id]), class:"form-control form-control-user", placeholder:"email" %>
                                  </div>
                              </div>
                              <div class="form-group row">
                                  <div class="col-sm-12 mb-3 mb-sm-0 form-control form-control-user form-select-request">
                                    <%= f.select :support_request_id, @support_request_user.pluck(:req_type,:id) %>
                                  </div>
                              </div>

                              <input type="Submit" class="btn btn-primary btn-user btn-block", value="Assign Supporting Document">

                          </form>
                      </div>
                  </div>
              </div>
          </div>
      </div>

  </div>

<% end %>
